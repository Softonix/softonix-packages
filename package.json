{
  "name": "softonix-packages",
  "private": true,
  "description": "Softonix packages monorepo",
  "type": "module",
  "license": "MIT",
  "author": "Softonix LLC",
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.15.1"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "test": "echo \"No tests yet\"",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "changeset": "changeset",
    "publish": "changeset publish",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,ts,mts,tsx,vue}": [
      "pnpm build",
      "pnpm -r --filter '!.' lint",
      "pnpm type-check"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "catalog:dev",
    "@eslint/js": "catalog:dev",
    "@softonix/eslint-config-rules-base": "workspace:*",
    "@softonix/eslint-config-rules-stylistic": "workspace:*",
    "@softonix/eslint-config-rules-typescript": "workspace:*",
    "@softonix/eslint-config-vue": "workspace:*",
    "@tsconfig/node22": "catalog:dev",
    "@types/node": "catalog:dev",
    "eslint": "catalog:dev",
    "husky": "catalog:dev",
    "lint-staged": "catalog:dev",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev",
    "typescript-eslint": "catalog:dev"
  }
}
